<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tltext"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="37dp"
        android:text="TL:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veftext" />

    <TextView
        android:id="@+id/Cadtext"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="11dp"
        android:text="CAD:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/qartext"
        app:layout_constraintEnd_toEndOf="@+id/qartext"
        app:layout_constraintStart_toStartOf="@+id/qartext"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qartext"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:text="QAR:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/jpytext"
        app:layout_constraintEnd_toEndOf="@+id/jpytext"
        app:layout_constraintStart_toStartOf="@+id/jpytext"
        app:layout_constraintTop_toBottomOf="@+id/Cadtext" />

    <TextView
        android:id="@+id/veftext"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="19dp"
        android:text="VEF:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tltext"
        app:layout_constraintEnd_toEndOf="@+id/tltext"
        app:layout_constraintStart_toStartOf="@+id/tltext"
        app:layout_constraintTop_toBottomOf="@+id/jpytext" />

    <TextView
        android:id="@+id/jpytext"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:text="JPY:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/veftext"
        app:layout_constraintEnd_toEndOf="@+id/veftext"
        app:layout_constraintStart_toStartOf="@+id/veftext"
        app:layout_constraintTop_toBottomOf="@+id/qartext" />

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="121dp"
        android:onClick="getir"
        android:text="Deger Getir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tltext"
        app:layout_constraintTop_toBottomOf="@+id/tltext" />
</androidx.constraintlayout.widget.ConstraintLayout>