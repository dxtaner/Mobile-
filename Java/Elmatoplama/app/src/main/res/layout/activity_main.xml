<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ismisakla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/oyunabasla"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="347dp"
        android:text="Oyuna Başla"
        android:onClick="kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/unut"
        app:layout_constraintTop_toBottomOf="@+id/ismisakla" />

    <CheckBox
        android:id="@+id/ismisakla"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="28dp"
        android:text="İsmi sakla"
        app:layout_constraintBottom_toTopOf="@+id/oyunabasla"
        app:layout_constraintEnd_toStartOf="@+id/unut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/unut"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="104dp"
        android:text="unut"
        android:onClick="unut"
        app:layout_constraintBaseline_toBaselineOf="@+id/ismisakla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ismisakla" />
</androidx.constraintlayout.widget.ConstraintLayout>