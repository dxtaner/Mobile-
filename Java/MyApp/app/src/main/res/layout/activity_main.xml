<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFC6E4"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/girisyap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="16dp"
        android:text="Bildirim OLustur"
        app:layout_constraintBottom_toTopOf="@+id/sil"
        app:layout_constraintEnd_toEndOf="@+id/sil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sil"
        android:layout_width="430dp"
        android:layout_height="0dp"
        android:layout_marginBottom="222dp"
        android:text="bildirim sil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girisyap" />
</androidx.constraintlayout.widget.ConstraintLayout>